<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.travel.phuc.trung.tlcn.tlcn.ConfirmInformation.CofirmImage">
<ListView
    android:layout_marginTop="5dp"
    android:dividerHeight="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/CAListanhxacnhan"
    android:layout_marginBottom="41dp">
</ListView>
    <FrameLayout
        android:layout_gravity="bottom"
        android:id="@+id/CAconfirm"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/CAcapnhatanh"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/botrongoc"
            android:text="Cập Nhật Thông Tin"
            android:textStyle="normal"
            android:textSize="10sp"
            />
        <Button
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:id="@+id/CAkhongcapnhatanh"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/botrongoc"
            android:text="Không xác nhận"
            android:textStyle="normal"
            android:textSize="10sp"
            />
    </FrameLayout>
    <ProgressBar
        android:id="@+id/tiengtrinhcapnhatalbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"/>
</FrameLayout>
