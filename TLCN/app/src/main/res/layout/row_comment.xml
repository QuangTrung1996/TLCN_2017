<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/AnhDaidien_Cmmt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/anhdaidien"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/UserNameComment"
            android:maxWidth="200dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"/>
        <TextView
            android:textSize="7sp"
            android:id="@+id/ThoiGianBinhLuan_DDDL"
            android:textStyle="italic"
            android:maxWidth="300dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 phút trước"/>
        <TextView
            android:layout_marginTop="5dp"
            android:typeface="serif"
            android:id="@+id/NoiDungCmmt"
            android:maxWidth="300dp"
            android:layout_marginLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="day là 1 comment ccccccccccccccccccccccccccc"/>
    </LinearLayout>
</LinearLayout>