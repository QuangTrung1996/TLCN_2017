<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.travel.phuc.trung.tlcn.tlcn.Home.festivalVenues.FestivalDetail"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <ScrollView
                android:id="@+id/scrollmapLH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:fadeScrollbars="false"
            android:scrollbars="vertical"
            android:background="@color/white">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Ten_DDLH_ChiTiet"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="day la dau vay day la o "
                    android:textStyle="normal|bold|italic"/>
                <TextView
                    android:textSize="10sp"
                    android:id="@+id/diachiLH"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="117/123/3/4 lê anh hòa/p22/quận 14"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ngayBDLH_detail"
                        android:textColor="@color/blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="ngày bắt đầu:"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ngayKTLH_detail"
                        android:textColor="@color/blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="ngày kết thúc:"/>
                </LinearLayout>
                <LinearLayout
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/ViewPager_Hinhanh_LH_chitiet"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:background="#ffff">
                    </android.support.v4.view.ViewPager>
                </LinearLayout>
                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <ImageButton
                        android:layout_marginStart="10dp"
                        android:id="@+id/Bnt_like_chitiet_LH"
                        android:background="@color/white"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/like"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="10dp" />

                    <ImageButton
                        android:id="@+id/Btn_Dislike_chitiet_LH"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/dislike"
                        android:scaleType="fitXY"
                        android:background="@color/white"/>

                    <ImageButton
                        android:id="@+id/Btn_YeuThich_chitiet_LH"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/chuayeuthich"
                        android:scaleType="fitXY"
                        android:background="@color/white"/>
                    <TextView
                        android:text="lược like"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/luoclikeDDDL_LH"
                        android:textColor="@color/blue"
                        android:layout_marginStart="20dp" />
                    <TextView
                        android:text="bình luận"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/binhluan_DDDL_LH"
                        android:textColor="@color/blue"
                        android:layout_marginStart="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:maxLength="800"
                        android:id="@+id/mota_LH"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="
down vote
