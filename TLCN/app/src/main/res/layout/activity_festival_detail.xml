                </LinearLayout>


                <LinearLayout
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:weightSum="6">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="6"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp">
                        <EditText
                            android:textSize="10sp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:id="@+id/etOrigin_LH"
                            android:hint="Dịa điểm xuất phát" />

                        <EditText
                            android:textSize="10sp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:hint="địa điểm đến"
                            android:id="@+id/etDestination_LH" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btnFindPath_LH"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical|end"
                            android:background="@color/colorPrimary"
                            android:gravity="end"
                            android:text="Find path"
                            android:textColor="@color/colorAccent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_marginLeft="10dp"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_distance"/>
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="0 km"
                        android:id="@+id/tvDistance_LH" />

                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_clock"/>
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="0 min"
                        android:id="@+id/tvDuration_LH" />
                    <Spinner
                        android:id="@+id/loaimap_LH"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp">
                    </Spinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/ThemVaoLichTrinh_LH"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/botrongoc"
                        android:text="Thêm Vào Lịch Trình"
                        android:textStyle="normal"
                        android:textSize="10sp"
                        />
                </LinearLayout>
                <fragment
                    android:id="@+id/map_LH"
                    class="com.travel.phuc.trung.tlcn.tlcn.GoogleMap.WorkaroundMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="380dp"
                    />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>





