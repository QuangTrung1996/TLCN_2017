<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_gravity="center"
            android:id="@+id/AnhDaijDien_LH"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/anhao"
            android:scaleType="centerCrop"
            android:layout_marginStart="2dp"
            />
        <LinearLayout
            android:id="@+id/thongtinLH"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/id_LeHoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Ten_LH"
                    android:text="tenquan"/>
                <TextView
                    android:textSize="10sp"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DiaChi_LH "
                    android:id="@+id/DiaChi_LH"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/thoigian"
                            android:layout_marginLeft="2dp"
                            android:scaleType="fitXY"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/chuatoi"
                            android:layout_marginStart="2dp" />
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="5sp"
                            android:id="@+id/ngayBDLH"
                            android:layout_marginEnd="3dp"
                            android:layout_marginStart="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:textAlignment="center"
                            android:textStyle="italic"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22/05/2017 - "/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:weightSum="10">
               <TextView
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center"
                   android:background="@color/white"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="yêu thích"
                   android:id="@+id/yeuthichLH"
                   android:textSize="10sp"
                   android:textColor="@color/blue"
                   android:layout_marginStart="10dp" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bình luận"
                    android:id="@+id/binhluanLH"
                    android:textSize="10sp"
                    android:textColor="@color/blue"
                    android:layout_marginStart="10dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>