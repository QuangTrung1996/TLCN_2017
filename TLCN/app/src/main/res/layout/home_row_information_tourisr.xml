<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey">>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/id_DuLich">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/AnhDaijDien_DL"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/anhdaidien"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_marginLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/TenDiaDiem_DL"
                        android:text="tenquan"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DiaChi_DL"
                        android:id="@+id/DiaChi_DL"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                app:srcCompat="@drawable/ic_android_black_24dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/Anh_DL"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="2dp"
            android:background="@color/textcolor"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="10">
            <ImageButton
                android:background="@color/white"
                android:id="@+id/Btn_Like"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:scaleType="center"
                android:padding="0dp"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/like"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SoLuotLike"
                android:text="1222"
                android:textSize="15sp"/>
            <ImageButton
                android:background="@color/white"
                android:id="@+id/Btn_Comment"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:scaleType="center"
                android:padding="0dp"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/comment"/>
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SoComment"
                android:text="1222"
                android:textSize="15sp"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:layout_gravity="center">
                <RatingBar
                    android:rating="3.5"
                    style="?android:attr/ratingBarStyleSmall"
                    android:progressTint="#f7d601"
                    android:id="@+id/DanhGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:max="5"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:stepSize="0.5" />
            </FrameLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>