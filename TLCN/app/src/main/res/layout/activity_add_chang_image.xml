<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.travel.phuc.trung.tlcn.tlcn.AddInfromation.AddChangImage">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/anhthem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/anhbia"
            android:contentDescription="TODO" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/danganhALbum"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="20dp"
            android:text="Hủy"
            android:id="@+id/huydanganh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:textColor="@color/blue"
            android:layout_marginLeft="100dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:text="Đăng ảnh"
            android:id="@+id/danganh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/tiengtrinhdangalbum"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"/>
</FrameLayout>
